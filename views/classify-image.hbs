
<form method="POST">

  <div class="card p-2">
    
    <div class="progress mb-2">
      <div class="progress-bar" role="progressbar" style="width: {{percentComplete}}%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{percentComplete}}% Complete</div>
    </div>

    <img class="card-img" src="/images/items{{imageFile}}" alt="Item of goods">

    <div class="card-body">
      <h5 class="card-title">How would you search online for this item?</h5>

      <p class="card-text">Enter the words you would use.</p>

      <div class="form-group">
        {{!-- <label for="answer">Your answer</label> --}}
        <input type="text" class="form-control" name="answer" id="answer" placeholder="" required>
      </div>

      <button type="submit" class="btn btn-lg btn-primary btn-submit">Submit</button>
      <a href="." class="btn btn-sm btn-secondary float-right btn-skip">I don&prime;t know what this is!</a>

      <br><br>

    </div>

  </div>

  <input type="hidden" name="imageFile" value="{{imageFile}}" />

</form>

<script type="text/javascript">

  window.onload = function() {


    document.querySelector(".btn-skip").addEventListener("click", function() {
      gtag('event', '{{imageFile}}', {
          'event_category': 'hmrcgoodstermssurvey',
          'event_label': 'I dont know what this is'
        }
      );
    });


    
    document.querySelector(".btn-submit").addEventListener("click", function() {
      gtag('event', '{{imageFile}}', {
          'event_category': 'hmrcgoodstermssurvey',
          'event_label': 'submit,' + document.querySelector("#answer").value
        }
      );
    });
    
    
  };

</script>